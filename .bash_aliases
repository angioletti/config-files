#
# APT
#
alias apti='sudo apt-get install'
alias aptu='sudo apt-get update'
alias aptuu='sudo apt-get update && sudo apt-get upgrade -qq'
alias aptuuu='sudo apt-get update && sudo apt-get upgrade -qq && sudo apt-get dist-upgrade -qq'
alias aptcs='apt-cache search'
alias apte='apt-get remove'
alias aptp='apt-get purge'

#
# Diversos
#
alias sss='sudo su -'
alias shtd='sudo shutdown -h now'
alias rbt='sudo reboot'
